                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/profilepage_roomno"
                    android:text=""
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
